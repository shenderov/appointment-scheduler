{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "CommonJS",
    "paths": {
      "@appointments/*": ["apps/backend/src/appointments/*"],
      "@auth/*": ["apps/backend/src/auth/*"],
      "@clinic/*": ["apps/backend/src/clinic/*"],
      "@common/*": ["apps/backend/src/common/*"],
      "@providers/*": ["apps/backend/src/providers/*"],
      "@services/*": ["apps/backend/src/services/*"],
      "@users/*": ["apps/backend/src/users/*"],
      "@shared-models/*": ["libs/shared-models/src/*"],
      "@shared-models/dtos/*": ["libs/shared-models/src/dtos/*"],
      "@shared-models/enums/*": ["libs/shared-models/src/enums/*"],
      "@shared-models/constants/*": ["libs/shared-models/src/constants/*"]
    }
  },
  "include": ["src", "../../libs/shared-models/src/**/*"],
  "exclude": ["node_modules", "dist", "test"]
}
