{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "../../dist/apps/frontend",
    "jsx": "react-jsx",
    "paths": {
      "@components/*": ["apps/frontend/src/components/*"],
      "@layout/*": ["apps/frontend/src/layout/*"],
      "@assets/*": ["apps/frontend/src/assets/*"],
      "@router/*": ["apps/frontend/src/router/*"],
      "@utils/*": ["apps/frontend/src/utils/*"],
      "@views/*": ["apps/frontend/src/views/*"],
      "@shared/models": ["libs/shared-models"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "test"]
}
