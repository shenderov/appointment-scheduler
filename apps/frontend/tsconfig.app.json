{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "../../dist/apps/frontend",
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@api/*": ["src/api/*"],
      "@components/*": ["src/components/*"],
      "@context/*": ["src/auth/context/*"],
      "@layout/*": ["src/layout/*"],
      "@assets/*": ["src/assets/*"],
      "@router/*": ["src/router/*"],
      "@utils/*": ["src/utils/*"],
      "@views/*": ["src/views/*"],
      "@auth/*": ["src/auth/*"],
      "@shared/models/*": ["../../libs/shared-models/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "test"]
}
